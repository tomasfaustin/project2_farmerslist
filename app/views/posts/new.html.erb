<h1>create a new post!</h1>

<%= form_for @post do |f| %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
<br>
    <div>
      <%= f.label :message %>
      <%= f.text_area :message %>
    </div>
<br>
    <div>
      <%= f.label :organic? %>
      <%= f.text_field :organic %>
    </div>
<br>
    <div>
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
<br>
  <h4><div>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div></h4>
<br>
    <%= f.submit "add new post!" %>

<% end %>
